MODE=TESTNET
TESTNET_BINANCE_API_KEY=
TESTNET_BINANCE_SECRET_KEY=
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT,SOLUSDT,XRPUSDT
EXEC_INTERVAL_SECONDS=60
LOG_FILE=live_trader.log
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Order execution (SIMULATED by default; switch to LIVE later with safeguards)
ORDER_EXECUTION=SIMULATED
MAX_SLIPPAGE_BPS=50
ORDER_TIMEOUT_SEC=10
ORDER_RETRY=3
ORDER_KILL_SWITCH=false

# Live logs
LIVE_LOG_DIR=live_logs
# Enable date partitioning for logs: 1/true/on to enable, 0/false/off to disable
LIVE_LOG_DATE_PARTITION=1
# Timezone for log date partitioning (IANA TZ name)
LOG_TZ=UTC
# Date format for the partition directory
LOG_DATE_FMT=%Y%m%d

